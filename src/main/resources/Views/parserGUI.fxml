<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MainViewmodel">
    <children>

        <GridPane alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="0" >
            <children>
                <FlowPane GridPane.columnIndex="0" GridPane.rowIndex="0">
                <children>
                    <Button id="openButton" mnemonicParsing="false" onAction="#openFile" text="Open" />
                    <TextField fx:id="pathTextBox" minWidth="-Infinity" promptText="Filepath" prefWidth="100"/>
                </children>
            </FlowPane>

                <ComboBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="100" promptText="Maximum"/>
                <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />


            </children>

        </GridPane>



      <FlowPane GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="CENTER">
         <children>
              <ProgressBar fx:id="progressBar" prefWidth="250.0" progress="0.0" />
             <Button mnemonicParsing="false" onAction="#runParser" text="Run" GridPane.columnIndex="2" GridPane.rowIndex="2" />
         </children>
      </FlowPane>
    </children>
</GridPane>
